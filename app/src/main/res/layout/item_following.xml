<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/item_following_image_person_profile"
		style="@style/Widget.Outfit.Profile.Small" />

	<TextView
		android:id="@+id/item_following_text_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/component_label_horizontal_margin"
		android:layout_weight="1"
		tools:text="PERSON" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/item_following_button_unfollow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/component_button_horizontal_margin"
		android:text="@string/str_unfollow" />
</LinearLayout>